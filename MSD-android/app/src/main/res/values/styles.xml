<resources>

    <style name="Theme.Appstyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_appstyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Appstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appstyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Appstyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Appstyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Appstyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_appstyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_appstyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Appstyle</item>

    </style>

    <style name="ActionBar.Solid.Appstyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_appstyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_appstyle</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_appstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appstyle</item>
    </style>

    <style name="ActionBar.Transparent.Appstyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_appstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appstyle</item>
    </style>

    <style name="PopupMenu.Appstyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appstyle</item>
    </style>

    <style name="DropDownListView.Appstyle" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_appstyle</item>
    </style>

    <style name="ActionBarTabStyle.Appstyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_appstyle</item>
    </style>

    <style name="DropDownNav.Appstyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_appstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_appstyle</item>
    </style>

    <style name="ProgressBar.Appstyle" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_appstyle</item>
    </style>

    <style name="ActionButton.CloseMode.Appstyle" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_appstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Appstyle.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Appstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appstyle</item>
    </style>

</resources>
